<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "Nidelven Theme".
     -->

<object>
  <order manager="plone.portalheader" skinname="Nidelven Theme">
    <viewlet name="plone.skip_links"/>
 	<viewlet name="plone.logo"/>
	<viewlet name="plone.personal_bar"/>
	<viewlet name="nidelven.colophon"/>
	<viewlet name="plone.site_actions"/>
	<viewlet name="plone.searchbox"/>
    <viewlet name="plone.global_sections"/>
	<viewlet name="plone.app.i18n.locales.languageselector"/>
    <viewlet name="plone.path_bar"/>
  </order>

  <order manager="plone.abovecontent" skinname="Nidelven Theme">
     <viewlet name="plone.path_bar"/>
  </order>

  <order manager="plone.portalfooter" skinname="Nidelven Theme">
  <viewlet name="nidelven.colophon" />
  </order>

  <hidden manager="plone.portalheader" skinname="Nidelven Theme">
	<viewlet name="plone.path_bar"/>
	<viewlet name="plone.site_actions"/>
	<viewlet name="plone.app.i18n.locales.languageselector"/>
  </hidden>
  
   <hidden manager="plone.portalfooter" skinname="Nidelven Theme">
	<viewlet name="plone.site_actions"/>
	<viewlet name="plone.footer"/>
	<viewlet name="plone.colophon" />
  </hidden>
</object>
